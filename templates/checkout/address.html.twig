{% form_theme form 'base/form/tailwind_3_layout.html.twig' %}

{% extends 'base/layout/base.html.twig' %}

{% block title %}Delivery address page!{% endblock %}

{% block main %}
    <div class="bg-gray-50">
        <div class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8">
            <h2 class="sr-only">Checkout</h2>

            <div class="lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16">
                <div>
                    <div>
                        <h2 class="text-lg font-medium text-gray-900">Shipping information</h2>

                        {{ form(form) }}

                        {% if workflow_can(order, 'to_shopping_cart') %}
                            <div class="mt-16 border-t border-gray-200 py-6">
                                <a href="{{ path('app.checkout.cart') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                    <span aria-hidden="true"> &larr;</span>
                                    Previous step
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Order summary -->
                <div class="mt-10 lg:mt-0">
                    <h2 class="text-lg font-medium text-gray-900">Order summary</h2>

                    <div class="mt-4 rounded-lg border border-gray-200 bg-white shadow-sm">
                        <div class="px-4 sm:px-6">
                            {% include 'checkout/partials/items.html.twig' with {'form': cartForm} %}
                        </div>

                        <br>
                        <hr>

                        <section aria-labelledby="summary-heading"
                                 class="mt-16 lg:mt-0 lg:col-span-5 rounded-lg px-4 py-6 sm:p-6 lg:p-8">
                            {% include 'checkout/partials/summary.html.twig' %}
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}