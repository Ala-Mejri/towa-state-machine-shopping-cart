<div id="order-items">
    {{ form_start(form) }}

    <h2 id="cart-items-heading" class="sr-only">Items in your shopping cart</h2>
    <ul role="list" class="divide-y divide-gray-200 border-b border-t border-gray-200">
        {% for item in form.items %}
            <li data-id="product-{{ item.vars.data.product.id }}" itemtype="https://schema.org/Product" itemscope class="flex py-6 sm:py-10">
                <div class="flex-shrink-0">
                    <img itemprop="image" src="{{ item.vars.data.product.image.path }}"
                         alt="Front of men&#039;s Basic Tee in sienna."
                         class="h-24 w-24 rounded-md object-cover object-center sm:h-36 sm:w-36">
                </div>

                <div class="ml-4 flex flex-1 flex-col justify-between sm:ml-6">
                    <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                        <div>
                            <div class="flex justify-between">
                                <h3 class="text-sm" itemprop="name">
                                    <a itemprop="url" href="{{ path('app.product.detail', {id: item.vars.data.product.id}) }}"
                                       class="font-medium text-gray-700 hover:text-gray-800">{{ item.vars.data.product.name }}</a>
                                </h3>
                            </div>
                            <div class="mt-1 flex text-sm">
                                <p class="text-gray-500">Adidas</p>
                                <p class="ml-4 border-l border-gray-200 pl-4 text-gray-500">Large</p>
                            </div>
                        </div>

                        <div class="mt-4 sm:mt-0 sm:pr-9">
                            <div class="absolute right-0 top-0">
                                <div class="-m-2 inline-flex p-2 text-gray-400 hover:text-gray-500">
                                    {{ form_widget(item.remove) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-1 items-end justify-between pt-2">
                        <p itemprop="price" class="mt-1 text-sm font-medium text-gray-900">â‚¬{{ item.vars.data.product.price }}</p>

                        <div itemprop="quantity" class="ml-4">
                            {{ form_widget(item.quantity, {'attr': {'class': 'w-16 px-2 rounded-md border border-gray-300 py-1.5 text-left text-base font-medium leading-5 text-gray-700 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 sm:text-sm', 'data-name' : 'order-item-quantity'}}) }}
                        </div>
                    </div>

                    {#                <small>{{ item.vars.data.product.description[:75] }}...</small> #}

                    {#                <p class="mt-4 flex space-x-2 text-sm text-gray-700"> #}
                    {#                    <svg class="h-5 w-5 flex-shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"> #}
                    {#                        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" /> #}
                    {#                    </svg> #}
                    {#                    <span>In stock</span> #}
                    {#                </p> #}
                </div>
            </li>
        {% endfor %}
    </ul>

    <div class="flex space-x-2 justify-end mt-6">
        {{ form_widget(form.clear, {'attr': {'class': 'w-40 items-center justify-center rounded-md border border-transparent bg-red-600 px-4 py-2.5 text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-50'}}) }}
    </div>

    {{ form_end(form) }}
</div>